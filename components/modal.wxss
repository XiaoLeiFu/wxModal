.modal-open {
  overflow: hidden;
}

.modal-mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.48;
}

.modal {
  position: fixed;
  top: 10%;
  left: 10%;
  right: 10%;
  width: 80%;
  /* transform: translateY(-50%); */
  margin: 0 auto;
  z-index: 9990;
  display: none;
  overflow: hidden;
}

.modal.show{
  display: block;
}

.modal-dialog {
  position: relative;
  width: auto;
  background: #fff;
  margin: 10px;
}

.modal-dialog-centered {
  display: flex;
  align-items: center;
}

.modal-content {
    position: relative;
    flex: 1 1 auto;
    padding: 0 1rem;
}

.modal-header {
    display: flex;
    -webkit-box-align: start;
    align-items: flex-start;
    justify-content: space-between;
    padding: 1rem 0;
    border-bottom: 1px solid #e9ecef;
    border-top-left-radius: .3rem;
    border-top-right-radius: .3rem;
}

.modal-header .close {
    padding: 0 1rem;
    margin: -1rem -1rem -1rem auto;
    background-color: transparent;
    border: 0;
    -webkit-appearance: none;
    float: right;
    line-height: 2;
    font-size: 1.5rem;
    font-weight: 700;
    color: #000;
    text-shadow: 0 1px 0 #fff;
    opacity: .5;
}
.modal-header .close::after{ border: none; }


.modal-title {
  margin-bottom: 0;
  line-height: 1.6;
}

.modal-body {
    position: relative;
    flex: 1 1 auto;
    padding: 1rem 0;
}

.modal-footer {
    padding: 0;
    padding-bottom: 1rem;
    text-align: right;
}

.modal-footer .btn{
  font-size: 14px;
  font-weight: normal;
  line-height: 3em;
  height: 3em;
  margin-left: 10px;
  display: inline-block;
  background: none;
  color: #555;
}

.modal-footer .btn::after{
  border: 0;
}